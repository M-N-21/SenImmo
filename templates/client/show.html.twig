{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>NumeroIdentification</th>
                <td>{{ client.numeroIdentification }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ client.telephone }}</td>
            </tr>
            <tr>
                <th>Nationalite</th>
                <td>{{ client.nationalite }}</td>
            </tr>
            <tr>
                <th>TypeClient</th>
                <td>{{ client.typeClient }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_client_index') }}" class="link-info">revoir la liste</a>

    <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="link link-secondary">editer</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
