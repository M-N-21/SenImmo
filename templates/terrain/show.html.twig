{% extends 'base.html.twig' %}

{% block title %}Terrain{% endblock %}

{% block body %}
    <h1>Terrain</h1>
    <div class="row justify-content-center">
        {% for i in terrain.images %}
            <div class="col-md-3">
                <img src="{{asset('/upload/' ~ i.name) }}" alt="" class="img-fluid">
            </div>
        {% endfor %}
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Superficie</th>
                <td>{{ terrain.superficie }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ terrain.numero }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ terrain.description }}</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td style="background: {{terrain.disponibilite ? 'lightgreen' : 'red'}}">{{ terrain.disponibilite ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}

    <a href="{{ path('app_terrain_index') }}" class="link-info">revoir la liste</a>

    <a href="{{ path('app_terrain_edit', {'id': terrain.id}) }}" class="link link-secondary">editer</a>

    {{ include('terrain/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
