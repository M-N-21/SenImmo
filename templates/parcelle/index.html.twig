{% extends 'base.html.twig' %}

{% block title %}Parcelle{% endblock %}

{% block body %}
    <h1>Parcelle</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numero</th>
                <th>Superficie</th>
                <th>Disponibilité</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parcelle in parcelles %}
            <tr>
                <td>{{ parcelle.id }}</td>
                <td>{{ parcelle.numero }}</td>
                <td style="background: {{maison.disponibilite ? 'lightgreen' : 'red'}}">{{ parcelle.disponibilite ? 'Oui' : 'Non' }}</td>

                <td>{{ parcelle.superficie }} m²</td>
                <td>
                    <a href="{{ path('app_parcelle_show', {'id': parcelle.id}) }}">show</a>
                    <a href="{{ path('app_parcelle_edit', {'id': parcelle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune parcelle n'a été enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_parcelle_new') }}">Create new</a>
{% endblock %}
