{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for r in user.roles %}
                        {% if r == "ROLE_USER" %}
                            User
                        {% endif %}
                        {% if r == "ROLE_ADMIN" %}
                            Admin
                        {% endif %}

                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}" class="link-info">revoir la liste</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="link-secondary link">editer</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
